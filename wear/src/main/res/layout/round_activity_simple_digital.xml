<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimpleDigitalActivity"
    tools:deviceIds="wear_square">

    <TextView
        android:id="@+id/tvTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvMiddle"
        android:layout_alignLeft="@+id/tvMiddle"
        android:fontFamily="sans-serif-thin"
        android:textSize="@dimen/sd_tv_top_bottom_size"
        tools:text="PM" />

    <TextView android:id="@+id/tvMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-thin"
        android:textColor="#EDEDED"
        android:textSize="@dimen/sd_tv_middle_size"
        tools:text="12:30" />

    <TextView android:id="@+id/tvBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMiddle"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-thin"
        android:textSize="@dimen/sd_tv_top_bottom_size"
        tools:text="Wed October 25" />

</RelativeLayout>
